<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stickies" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:navigationBarColor">@color/dark_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="foreground">@color/light_green</item>
        <item name="background">@color/dark_green</item>
        <item name="transparentBackground">@color/transparent_black</item>
        <item name="stickcolor">@color/dark_light_light_green</item>
    </style>
</resources>